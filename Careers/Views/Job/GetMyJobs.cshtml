@using Careers.DataAccess.ViewModels
@model List<JobPostsModel>



<link rel="stylesheet" href="~/css/MyJob.css" />
<h1 style="color:#9B1F40;text-align:center">My Jobs</h1>
<br />
<div class="cards">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 20rem;">
            <div class="card-body">
                <h5 class="card-title">Title: @Html.DisplayFor(modelItem => item.Title)</h5>
                <p class="card-text">Description: @Html.DisplayFor(modelItem => item.Description)</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">PostedDate: @Html.DisplayFor(modelItem => item.PostedDate)</li>
                <li class="list-group-item">Deadline: @Html.DisplayFor(modelItem => item.Deadline)</li>
                <li class="list-group-item">Active Status: @Html.DisplayFor(modelItem => item.IsActive)</li>
            </ul>
            <div class="card-body">
                <a> @Html.ActionLink("Edit", "Edit", "Job", new {jobId = item.Id}, new {@class = "classname" } )</a>
                @if (item.IsActive)
                {
                    <a>@Html.ActionLink("Deactivate", "Deactivate", "Job", new {jobId = item.Id}, new {@class = "classname"})</a>
                }
                else
                {
                    <a> @Html.ActionLink("Activate", "Activate", "Job", new {jobId = item.Id}, new {@class = "classname1"})</a>
                }
            </div>
        </div>
    }
</div>


