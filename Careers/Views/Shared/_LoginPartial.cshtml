@using Careers.DataAccess.Models
@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <div class="dropdown">
                <a class="nav-link text-light dropdown-toggle btn btn-outline-danger" role="button"  id="profileMenu" data-bs-toggle="dropdown" aria-expanded="false" title="Manage"> @User.Identity.Name</a>

                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="profileMenu" role = "menu">
                    <li><a class="dropdown-item" asp-action="Home" asp-controller="Home">My Profile</a></li>
                    <li><a class="dropdown-item" asp-action="GetMyJobs" asp-controller="Job">My Job Posts</a></li>
                    <li><a class="dropdown-item" asp-action="PostJob" asp-controller="Job">Post a Job</a></li>
                </ul>
            </div>
        </li>
        <li class="nav-item">
            <a href="#" class="nav-link text-light" data-bs-toggle="modal" data-bs-target="#exitModal" id="logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Register" asp-controller="Home">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-action="Login" asp-controller="Home">Login</a>
        </li>
    }
</ul>

<!-- Modal -->
<div class="modal fade" id="exitModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Logout</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are You Sure?
            </div>
            <div class="modal-footer">
                <a class="btn btn-secondary" data-bs-dismiss="modal">No</a>
                <a asp-action="Logout" asp-controller="Home" class="btn btn-primary">Yes</a>
            </div>
        </div>
    </div>
</div>




<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/js/LogoutModal.js" asp-append-version="true"></script>
<script src="~/js/ProfileDropdown.js" asp-append-version="true"></script>